                <span class="col-5" t-esc="o.date_of_receipt_by_buyer" t-options="{'widget': 'date'}"/>
            </t>
            <t t-else="">
                <span class="col-5" t-esc="o.invoice_date" t-options="{'widget': 'date'}"/>
            </t>
        </xpath>

        <xpath expr="//span[@class=&quot;col-5&quot; and @t-esc=&quot;picking_data[&apos;scheduled_date&apos;]&quot;]"
               position="replace">
