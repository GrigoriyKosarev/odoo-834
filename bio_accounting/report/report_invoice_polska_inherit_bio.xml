<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document_polska_inherit_bio" inherit_id="us_account_report_invoice_polska.report_invoice_document_polska">
        <!--    ODOO-374    -->         <!--    250    -->
        <xpath expr="//t/table[3]/thead/tr/th[5]" position="after">
            <th style="width: 6%; padding:0; font-size: 13px; font-weight: normal;">
                <span>Cena netto przed rabatem</span>
            </th>
            <th style="width: 5%; padding:0; font-size: 13px; font-weight: normal;">
                <span>Rabat [%]</span>
            </th>
        </xpath>
        <!--    322    -->
        <xpath expr="//t/table[3]/tbody/t[5]/tr/td[4]" position="after">
            <!--    Cena netto przed rabatem    -->
            <td align="center" style="padding:0; font-size: 12px; font-weight: normal;">
                <span>
                   <t t-esc="line.price_unit"/>
                </span>
            </td>
            <!--    Rabat [%]   -->
            <td align="center" style="padding:0; font-size: 12px; font-weight: normal;">
                <span>
                    <t t-esc="line.discount"/>
                </span>
            </td>-
        </xpath>
        <!--    ODOO-374 end    -->

        <!-- 346
        <xpath expr="//t[@t-esc=&quot;'{:.2f}'.format(line.price_unit * (1 - (line.discount or 0.0) / 100.0))&quot;]" position="replace">
        -->
        <xpath expr="//t/table[3]/tbody/t[5]/tr/td[7]/span/t[@t-esc]" position="replace">
            <t t-esc="'{:.4f}'.format(line.price_unit * (1 - (line.discount or 0.0) / 100.0))"/>
        </xpath>

        <!-- 425
        <xpath expr="//t[@t-esc=&quot;'{:.2f}'.format(group['price_subtotal'] * group['tax_amount'] / 100)&quot;]" position="replace">
        -->
        <xpath expr="//t/table[4]/tbody/t[4]/tr/td[3]/span/t[@t-esc]" position="replace">
            <t t-esc="group['tax_sum']" t-options="{'widget': 'float', 'precision': 2}"/>
        </xpath>

        <!-- 431
        <xpath expr="//t[@t-esc=&quot;'{:.2f}'.format(group['price_subtotal'] * (1 + (group['tax_amount'] or 0.0) / 100.0))&quot;]" position="replace">
        -->
        <xpath expr="//t/table[4]/tbody/t[4]/tr/td[4]/span/t[@t-esc]" position="replace">
            <t t-esc="'{:.2f}'.format(group['price_subtotal'] + group['tax_sum'])"/>
        </xpath>
    </template>
</odoo>
