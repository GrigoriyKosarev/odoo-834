<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_bio_invoice_correction" model="report.paperformat">
            <field name="name">Korekta faktury</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">32</field>
            <field name="margin_left">7</field>
            <field name="margin_right">13</field>
            <field name="header_line" eval="False"/>
            <field name="dpi">90</field>
        </record>

        <record id="bio_accounting_creit_note_correction" model="ir.actions.report">
            <field name="name">Korekta faktury</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">bio_accounting.report_creit_note_correction_polska</field>
            <field name="report_file">bio_accounting.report_creit_note_correction_polska</field>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
<!--            <field name="domain">[('move_type', '=', 'out_refund')]</field>-->
            <field name="paperformat_id" ref="paperformat_bio_invoice_correction"/>
        </record>
    </data>
</odoo>
