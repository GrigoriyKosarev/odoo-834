<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_bank_form_inherit_bio" model="ir.ui.view">
        <field name="name">res.partner.bank.form.inherit.bio</field>
        <field name="model">res.partner.bank</field>
        <field name="inherit_id" ref="base.view_partner_bank_form"/>
        <field name="priority" eval="200"/>
        <field name="arch" type="xml">

            <!-- ODOO-464 -->
            <xpath expr="//field[@name='allow_out_payment']" position="after">
                <field name="bio_factoring" widget="boolean_toggle"/>
            </xpath>
            <!-- ODOO-464 end -->

        </field>
    </record>

    <record id="view_partner_property_form_inherit_bio" model="ir.ui.view">
        <field name="name">res.partner.form.banks.inherit.bio</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="priority" eval="200"/>
        <field name="arch" type="xml">

            <!-- ODOO-464 -->
            <xpath expr="//page[@name='accounting']//field[@name='bank_ids']/tree/field[@name='acc_holder_name']"
                   position="after">
                <field name="bio_factoring" widget="boolean_toggle"/>
            </xpath>
            <!-- ODOO-464 end -->

        </field>
    </record>

</odoo>